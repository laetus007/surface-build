{#
/**
 * @file
 * Surface's theme implementation for the menus in the primary_menu region.
 *
 * Available variables:
 * - menu_name: The machine name of the menu.
 * - items: A nested list of menu items. Each menu item contains:
 *   - attributes: HTML attributes for the menu item.
 *   - below: The menu item child items.
 *   - title: The menu link title.
 *   - url: The menu link url, instance of \Drupal\Core\Url
 *   - localized_options: Menu link localized options.
 *   - is_expanded: TRUE if the link has visible children within the current menu tree.
 *   - is_collapsed: TRUE if the link has children within the current menu tree that are not currently visible.
 *   - in_active_trail: TRUE if the link is in the active trail.
 *
 * @ingroup themeable
 */
#}

{{ attach_library('surface/menu-main') }}

{% import _self as menus %}
{{ menus.menu_links(items, attributes, 0, 'menu__item-', menu_name, menu, item_class, link_class, is_demo) }}

{% macro menu_links(items, attributes, menu_level, aria_id, menu_name, menu, item_class, link_class, is_demo) %}
  {% set drupal_selector_primary_nav_level = menu_level <= 1 ? 'menu-main--level-' ~ (menu_level + 1) : false %}
  {% set is_top_level_menu = menu_level == 0 %}

  {% import _self as menus %}
  {% if items %}

    {% set menu_classes = [
      'menu',
      menu_name ? 'menu-' ~ menu_name|clean_class,
      menu_level > 0 ? 'menu-main--level-' ~ (menu_level + 1),
      attributes ? attributes.class
    ]|join(' ')|trim %}

    {% if menu_level == 1 %}
      <span data-drupal-selector="menu-main--1" class="menu-main--1"></span>
    {% endif %}

    <ul class="{{ menu_classes }}" data-type="{{ menu }}" data-drupal-selector="{{ drupal_selector_primary_nav_level }}" {{ attributes ? attributes|without('class') }}>
      {% for item in items %}

        {% if item.url.isRouted and item.url.routeName == '<nolink>' %}
          {% set menu_item_type = 'nolink' %}
        {% elseif item.url.isRouted and item.url.routeName == '<button>' %}
          {% set menu_item_type = 'button' %}
        {% else %}
          {% set menu_item_type = 'link' %}
        {% endif %}

        {% set item_classes = [
            'menu__item',
            'menu__item--' ~ menu_item_type,
            menu_level > 0 ? 'menu__item--level-' ~ (menu_level + 1),
            item.in_active_trail ? 'menu__item--active-trail',
            item.below and menu != 'default' ? 'menu__item--has-children',
          ]
        %}

        {% set link_classes = [
            'menu__link',
            'menu__link--' ~ menu_item_type,
            menu_level > 0 ? 'menu__link--level-' ~ (menu_level + 1),
            item.in_active_trail ? 'menu__link--active-trail',
            item.below and menu != 'default' ? 'menu__link--has-children',
          ]
        %}

        {% set item_classes = item_classes|join(' ')|trim %}
        {% set link_classes = link_classes|join(' ')|trim %}

        <li class="{{ item_classes }}" data-drupal-selector="{{ is_top_level_menu and menu != 'default' and item.below ? 'menu__item--has-children' }}">
          {% set aria_id = (aria_id ~ loop.index )|clean_id %}
          {% set link_title %}
            <span class="menu__link-inner menu__link-inner--level-{{ menu_level + 1 }}">{{ item.title }}</span>
          {% endset %}

          {% if menu_item_type == 'link' or menu_item_type == 'nolink' %}
            {% if is_demo %}
              <a class="{{ link_classes }}" href="{{ item.url }}" data-drupal-selector="{{ is_top_level_menu and menu != 'default' ? 'menu__link--has-children' : false }}">{{ menu_item_type == 'link' ? link_title : item.title }}</a>
            {% else %}
              {{ link(menu_item_type == 'link' ? link_title : item.title, item.url, {
                'class': link_classes,
                'data-drupal-selector': is_top_level_menu  ? 'menu__link--has-children' : false,
                })
              }}
            {% endif %}

            {% if item.below and menu != "default" %}

              {% if is_top_level_menu %}
                <button class="menu-toggle" data-drupal-selector="menu-toggle" aria-controls="{{ aria_id }}" aria-expanded="false" aria-hidden="true" tabindex="-1">
                  <span class="visually-hidden">{{ item.title ~ ' sub-navigation' }}</span>
                  <span class="icon--menu-toggle"></span>
                </button>
              {% endif %}

              {% if menu == 'dropdown' and menu_level < 1 %}
                {% set attributes = attributes.setAttribute('id', aria_id) %}
                {{ menus.menu_links(item.below, attributes, menu_level + 1, aria_id, menu_name, menu, item_class, link_class, is_demo) }}
              {% endif %}

              {% if menu == 'mega' and menu_level < 2 %}
                {% set attributes = attributes.setAttribute('id', aria_id) %}
                {{ menus.menu_links(item.below, attributes, menu_level + 1, aria_id, menu_name, menu, item_class, link_class, is_demo) }}
              {% endif %}

            {% endif %}

          {% elseif menu_item_type == 'button' %}
            {% if is_demo %}
              <a class="{{ link_classes }}" href="{{ item.url }}" data-drupal-selector="{{ is_top_level_menu ? 'menu__link-has-children' : false }}">{{ menu_item_type == 'link' ? link_title : item.title }}</a>
            {% else %}
              {{ link(link_title, item.url, {
                'class': link_classes,
                'aria-controls': is_top_level_menu and item.below ? aria_id : false,
                'aria-expanded': is_top_level_menu and item.below ? 'false' : false,
                'data-drupal-selector': is_top_level_menu and item.below ? 'primary-nav-submenu-toggle-button' : false,
              }) }}
            {% endif %}

            {% set attributes = attributes.setAttribute('id', aria_id) %}
            {{ menus.menu_links(item.below, attributes, menu_level + 1, aria_id, menu_name, menu, item_class, link_class, is_demo) }}
          {% endif %}
        </li>
      {% endfor %}
    </ul>
  {% endif %}
{% endmacro %}
