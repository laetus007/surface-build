{{ attach_library('surface/region')}}

{% set classes = [
  'region',
  modifier ? modifier,
  attributes ? attributes.class
]|join(' ')|trim %}

{% if region_wrapper %}
  <section class="{{ classes }}" {{ attributes ? attributes|without('class') }} {% if id %}id="{{ id }}"{% endif %}>
{% endif %}

  {% block content %}
    {{ content }}
  {% endblock %}

{% if region_wrapper %}
  </section>
{% endif %}
