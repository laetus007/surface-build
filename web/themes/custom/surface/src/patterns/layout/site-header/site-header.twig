{{ attach_library('surface/site-header') }}

<header id="header" class="site-header" data-drupal-selector="site-header" role="banner" data-once="navigation">
  {% block alert %}
    {% include '@components/site-alert/site-alert.twig' %}
  {% endblock %}

  <section class="site-secondary">
    <div class="container">
      <div class="site-secondary__content">
        {% block secondary %}
          {% include '@components/menu-secondary/menu-secondary.twig' with {
            'is_demo': true,
            'items': secondary_menu
          } %}
        {% endblock %}

        <div class="site-secondary__buttons">
          {% block buttons %}
            {% include '@components/button-give/button-give.twig' %}
            {% include '@components/translate/translate.twig' %}
            {% include '@components/button-search/button-search.twig' with {
              'is_demo': false
            } %}
          {% endblock %}
        </div>
      </div>
    </div>
  </section>

  <section class="site-primary">
    <div class="container">
      <div class="site-primary__content">
        {% block branding %}
          {% include '@components/site-branding/site-branding.twig' with {
            'logo': logo
          } only %}
        {% endblock %}

        {% block primary %}
          {% embed '@layout/site-navigation/site-navigation.twig' %}
            {% block menu %}
              {% include '@components/menu-main/menu-main.twig' with {
                'data_menu': data_menu,
                'is_demo': is_demo,
                'items': main_menu
              } only %}
              {% include '@components/menu-secondary/menu-secondary.twig' with {
                'is_demo': true,
                'items': secondary_menu
              } only %}
            {% endblock %}
          {% endembed %}
        {% endblock %}
      </div>
    </div>
  </section>

  {% block search %}
    {% include '@components/site-search/site-search.twig' %}
  {% endblock %}
</header>
