{#
/**
 * @file
 * Surface's theme override to display the header region.
 *
 * Available variables:
 * - content: The content for this region, typically blocks.
 * - attributes: HTML attributes for the region <div>.
 * - region: The name of the region variable as defined in the theme's
 *   .info.yml file.
 *
 * @see template_preprocess_region()
 */
#}

{% if content %}
  {% embed '@layout/site-header/site-header.twig' %}
    {% block alert %}
      {% if data_alert == 'true' %}
        {% include '@components/site-alert/site-alert.twig' with {
          'text': site_alert
        } %}
      {% endif %}
    {% endblock %}

    {% block secondary %}
      {{ drupal_menu('secondary') }}
    {% endblock %}

    {% block buttons %}
      {% include '@components/give-button/give-button.twig' with {
        'url': give_url
      } %}
      {% include '@components/search-button/search-button.twig' with {
        'is_demo': false
      } %}
    {% endblock %}

    {% block branding %}
      {% include '@layout/site-branding/site-branding.twig' with {
        'site_logo': header_logo
      } %}
    {% endblock %}

    {% block primary %}
      {% embed '@layout/site-navigation/site-navigation.twig' %}
        {% block menu %}
          {{ drupal_menu('main', expand=true) }}
          {{ drupal_menu('secondary') }}
        {% endblock %}
      {% endembed %}
    {% endblock %}

    {% block search %}
      {% embed '@components/site-search/site-search.twig' with {
        'data_search': data_search
      } %}

        {% block quicklinks %}
          {{ drupal_menu('quick-links') }}
        {% endblock %}
      {% endembed %}
    {% endblock %}
  {% endembed %}
{% endif %}
