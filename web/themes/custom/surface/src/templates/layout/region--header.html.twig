{#
/**
 * @file
 * Surface's theme override to display the header region.
 *
 * Available variables:
 * - content: The content for this region, typically blocks.
 * - attributes: HTML attributes for the region <div>.
 * - region: The name of the region variable as defined in the theme's
 *   .info.yml file.
 *
 * @see template_preprocess_region()
 */
#}

{% if content %}
  {% embed '@layout/site-header/site-header.twig' %}
    {% block alert %}
      {% if data_alert == 'true' %}
        {% include '@components/site-alert/site-alert.twig' with {
          'text': alert
        } %}
      {% endif %}
    {% endblock %}

    {% block secondary %}
      {{ drupal_menu('secondary') }}
    {% endblock %}

    {% block branding %}
      {{ drupal_entity('block', 'surface_site_branding') }}
    {% endblock %}

    {% block primary %}
      {{ drupal_menu('main', expand=true) }}
    {% endblock %}

    {% block search %}
      {{ drupal_entity('block', 'surface_search_form_wide') }}
    {% endblock %}
  {% endembed %}
{% endif %}
