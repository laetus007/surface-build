{% set classes = [
  'node',
  'container',
  'grid',
  'grid--full',
  'node--type-' ~ node.bundle|clean_class,
  not node.isPublished() ? 'node--unpublished',
  view_mode ? 'node--view-mode-' ~ view_mode|clean_class
]|join(' ')|trim %}

{% set title_classes = [
  'node__title',
  title_attributes ? title_attributes.class
]|join(' ')|trim %}

{% set content_classes = [
  'node__content',
  content_attributes ? content_attributes.class
]|join(' ')|trim %}

<article class="{{ classes }}" {{ attributes ? attributes|without('class', 'id') }}>
  {{ title_prefix }}
  {% if label %}
    <h1 class="{{ title_classes }}" {{ title_attributes ? title_attributes|without('class') }}>
      <a href="{{ url }}" rel="bookmark">{{ label }}</a>
    </h1>
  {% endif %}
  {{ title_suffix }}

  <div class="{{ content_classes }}" {{ content_attributes ? content_attributes|without('class') }}>
    {{ content }}
  </div>
</article>
